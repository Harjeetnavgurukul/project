<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/tdUserImage_IV"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:src="@drawable/i"
            android:visibility="visible" />

        <TextView
            android:id="@+id/department_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tdUserImage_IV"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:text="Student Helpdesk"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tdUserName_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/department_TV"
            android:layout_centerHorizontal="true"
            android:text="Mr Amit Singal "
            android:textColor="@color/lightblue"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tdUserMobile_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tdUserName_TV"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="+91-000000000"
            android:textColor="@android:color/darker_gray" />


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/call"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tdUserMobile_TV"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@color/lightblue"
            android:text="call"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</ScrollView>